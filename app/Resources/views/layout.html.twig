<!DOCTYPE html>

<html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>
      {% block title %}WANGARDEN{% endblock %}
    </title>

    {% block stylesheets %}

      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
      <link rel="stylesheet" href="{{asset('Custom/css/style.css')}}">
    {% endblock %}

  </head>

  <body>

    <div class="container">
      <div id="header" class="well">
        <h1>{{'facture.global.nom_site'|trans}}</h1>

        <p></p>
      </div>
      <div class="row">
        <div id="menu" class="col-md-2">
          <h3>{{'facture.global.menu'|trans}}</h3>
          <ul class="nav nav-tabs">
            <li class="nav-item dropdown">
              <a class="nav-link " href="{{path('wangarden_facture_homepage') }}">{{'facture.global.accueil'|trans}}</a>
            </li>
          </ul>
          <ul class="nav nav-tabs">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-toggle="dropdown" href='' role="button" aria-haspopup="true" aria-expanded="false">{{'facture.global.client'|trans}}</a>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="{{path('wangarden_facture_client_index') }}">{{'facture.global.liste_des_clients'|trans}}</a>
                <a class="dropdown-item" href="{{path('wangarden_facture_client_create') }}">{{'facture.global.ajouter_un_client'|trans}}</a>
              </div>
            </li>
          </ul>
          <ul class="nav nav-tabs">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" data-toggle="dropdown" href='' role="button" aria-haspopup="true" aria-expanded="false">{{'facture.global.produit'|trans}}</a>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="{{path('wangarden_facture_produit_index') }}">{{'facture.global.liste_des_produits'|trans}}</a>
                <a class="dropdown-item" href="{{path('wangarden_facture_produit_create') }}">{{'facture.global.ajouter_un_produit'|trans}}</a>
              </div>
            </li>
          </ul>
          <ul class="nav nav-tabs">
            <li class="nav-item dropdown">
              <a class="nav-link " href="{{path('wangarden_facture_client_produitclient') }}">{{'facture.global.produit_client'|trans}}</a>
            </li>
          </ul>

          <ul class="nav nav-tabs">
            <li class="nav-item dropdown">
              <a class="nav-link " href="{{path('wangarden_facture_mesFactures') }}">{{'facture.global.index_facture'|trans}}</a>
            </li>
          </ul>
        </div>

        <div id="content" class="col-md-9">
          {% block body %}{% endblock %}
        </div>
      </div>

      <hr>

      <footer>

        <p>
          WANGARDEN
        </p>

      </footer>

    </div>

    {% block javascripts %}

      {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}

      <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    {% endblock %}

  </body>

</html>
